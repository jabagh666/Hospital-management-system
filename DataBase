Tables:


create table Patient(
ID int auto_increment,
name varchar(20) NOT NULL,
pEmail varchar(40) NOT NULL,
room numeric(2,0) NOT NULL,
primary key (ID));

create table Doctor(
ID int auto_increment,
name varchar(20),
field varchar(20),
dEmail varchar(40) NOT NULL,
day VARCHAR(45) NOT NULL ,
start_at TIME NOT NULL  ,
end_at TIME NOT NULL ,
primary key (ID));

create table Manager(
ID int auto_increment,
mEmail varchar(40) NOT NULL,
name varchar(20),
primary key (ID));

create table Nurse(
ID int auto_increment,
name varchar(20),
nEmail varchar(40) NOT NULL,
primary key (ID));

create table Room(
number int,
status TINYINT(4) NOT NULL DEFAULT 1,
primary key (number));

create table appointments(
doc_id int,
pat_id int,
room int,
day datetime,
time timestamp,
primary key (doc_id,pat_id),
foreign key (doc_id) references Doctor(ID) ON DELETE RESTRICT,
foreign key (pat_id) references Patient(ID)ON DELETE RESTRICT,
foreign key (room) references Room(number))ON DELETE RESTRIC;


CREATE TABLE dayoff (
  doc_id int(11) DEFAULT NULL,
  notAv datetime DEFAULT NULL,
  FOREIGN KEY (doc_id) REFERENCES Doctor (ID)
);

CREATE TABLE veiw (
  nurse_id int(11) DEFAULT NULL,
  roomNo int(11) DEFAULT NULL,
 foreign KEY roomNo (roomNo)REFERENCES Room (number),
 foreign KEY nurse_id REFERENCES Nurse (ID)
);



